<!DOCTYPE html>
<html>
    <head>
        {% block meta %}
            <meta charset="UTF-8">
            <meta name="viewport"
                  content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
            <meta http-equiv="X-UA-Compatible" content="ie=edge">
        {% endblock %}
        <title>{% block title %}Virtual Vet Clinic{% endblock %}</title>
        {% block links %}
            <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/cyborg/bootstrap.min.css"> -->
            <link rel="stylesheet" href="http://bootswatch.com/flatly/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <div class="header">
            <h2 class="col-sm-offset-2"><small>VVC - Admin Dashboard</small></h2>
        </div>
        {% endblock %}
        <div class="container-fluid">
        <div class="row">
            {% block nav %}{% include 'inc/admin_nav.twig' %}{% endblock %}
            {% block content %}{% endblock %}
            </div>
        </div>
        </div>
        {% block footer %}{% include "inc/footer.twig" %}{% endblock %}
        {% block scripts %}{% endblock %}
    </body>
</html>
