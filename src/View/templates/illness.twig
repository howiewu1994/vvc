{% extends 'base.twig' %}

{% block title %}{{ ill.name }}{% endblock %}

{% block content %}
<div class="container">
    <div>
        <h2>{{ ill.name }}</h2>
        <div class="media well">
            <div class="media-body">
                <h3 class="media-heading">Overview</h3>
                <h5>Class: {{ ill.class }}</h5>
                <h5>Description</h5>
                <ul>
                    <li>
                        <p>{{ ill.description }}</p>
                    </li>
                </ul>
            </div>
        </div>

        {% for step in ill.steps %}
            {% include "inc/illness_step.twig" %}
        {% endfor %}
        {% if ill.drugs is not empty or ill.payments is not empty %}
            {% include "/inc/illness_extra.twig" %}
        {% endif %}
    </div>
</div>
{% endblock %}
