<div class="media well">
    <div class="media-body">
        <h3 class="media-heading">{{ step.num }}. {{ step.name }}</h3>
        {% if step.text is not empty %}
            <h5>Description</h5>
            <ul>
                <li><p>{{ step.text }}</p></li>
            </ul>
        {% endif %}
        {% if step.pictures is not empty %}
          <h5>Pictures</h5>
          <ul>
              {% for pic in step.pictures %}
                  <li><img src="{{ pic }}"></li>
              {% endfor %}
          </ul>
        {% endif %}
        {% if step.videos is not empty %}
          <h5>Videos</h5>
          <ul>
              {% for vid in step.videos %}
                  <div class="embed-responsive embed-responsive-16by9">
                      <iframe class="embed-responsive-item" src="{{vid}}"></iframe>
                  </div>
              {% endfor %}
          </ul>
        {% endif %}
    </div>
</div>
