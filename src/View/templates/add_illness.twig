{% extends 'admin_base.twig' %}

{% block title %}Add Illness{% endblock %}

{% block scripts %}
<script src="/js/file_select.js"></script>
{% endblock %}

{% block content %}
{# Dialogues #}
{% include 'inc/dlg/select_pic.twig' %}

<div class="container">
    <div class="well col-sm-6 col-sm-offset-3">
        <form method="post" action="/admin/illnesses/add-single" enctype="multipart/form-data">
            <h2>Add Illness</h2>
            <br>

            {% include "inc/flash_messages.twig" %}

            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" type="text" class="form-control" name="name" placeholder="Illness name" required autofocus>
            </div>
            <div class="form-group">
                <label for="name">Class</label>
                <input id="name" type="text" class="form-control" name="class" placeholder="Illness Class" required>
            </div>
            <div class="form-group">
                <label for="text">Text</label>
                <input id="text" type="text" class="form-control" name="text" placeholder="Illness description" required>
            </div>
            <br>
            <br>
            <br>
            <button class="btn btn-lg btn-primary btn-block"
                type="submit">Create new illness</button>
        </form>
    </div>
</div>
{% endblock %}
